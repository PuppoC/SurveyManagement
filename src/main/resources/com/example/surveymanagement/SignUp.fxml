<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="540.0" prefWidth="960.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.surveymanagement.LoginSignUpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sign Up">
         <font>
            <Font name="System Bold" size="41.0" />
         </font>
      </Text>
      <HBox alignment="CENTER" prefHeight="39.0" prefWidth="920.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Text>
            <TextField fx:id="usernameTextField" prefHeight="25.0" prefWidth="220.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="39.0" prefWidth="920.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Text>
            <PasswordField fx:id="passwordField" prefWidth="220.0" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#onSignUpButton" prefHeight="37.0" prefWidth="290.0" text="Sign Up">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <HBox alignment="CENTER" prefHeight="39.0" prefWidth="920.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Already have an account?" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="6.0" />
               </HBox.margin>
            </Text>
            <Button mnemonicParsing="false" onAction="#goToLogin" text="Login" />
         </children>
      </HBox>
      <Text fx:id="errorMsgText" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" />
   </children>
</VBox>
